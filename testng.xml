<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Selenium Test Suite">

    <!-- ✅ Smoke Test Suite -->
    <test name="Smoke Tests">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <!-- Test classes for smoke testing -->
            <class name="test/java/tests.TestLogin"/>
        </classes>
    </test>

    <!-- ✅ Sanity Test Suite -->
    <test name="Sanity Tests">
        <groups>
            <run>
                <include name="sanity"/>
            </run>
        </groups>
        <classes>
            <!-- Test classes for sanity testing -->
            <class name="test/java/tests.TestCheckOut"/>
        </classes>
    </test>

    <!-- ✅ Regression Test Suite -->
    <test name="Regression Tests">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <!-- Add all your test classes here for full regression -->
            <class name="tests.TestLogin"/>
            <class name="tests.TestCheckOut"/>
            <!-- Add more test classes as needed -->
        </classes>
    </test>

</suite>
